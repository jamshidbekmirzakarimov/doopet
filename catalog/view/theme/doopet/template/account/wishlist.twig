                    </g>
                    <defs>
                      <clipPath id="clip0_368_3267">
                        <rect width="12.6316" height="12.6316" fill="white" transform="translate(0.684204 0.184219)">
                        </rect>
                      </clipPath>
                    </defs>
                  </svg></a>
              </td>
            </tr>
            {% endfor %}
          </tbody>

        </table>
      </div>
      {% else %}
      <p>{{ text_empty }}</p>
      {% endif %}
      <div  class="buttons clearfix">
        <div class="pull-right"><a href="{{ continue }}" class="wishlist-btn">{{ button_continue }}</a></div>
      </div>
      {{ content_bottom }}
    </div>
    {{ column_right }}
  </div>
</div>
{{ footer }}